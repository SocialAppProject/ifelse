<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/text_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/art_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:editable="false"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="title"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:editable="false"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="cate"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/option_1_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"/>

            <ImageView
                android:id="@+id/option_1_iv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

            </ImageView>

            <TextView
                android:id="@+id/option_2_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"/>

            <ImageView
                android:id="@+id/option_2_iv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="VS"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDarker"
                android:textStyle="bold"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/option_1_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:editable="false"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/option_2_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:editable="false"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
